.tCell{ "ng-repeat" => "column in $ctrl.columns track by $index", "ng-click" => "$ctrl.showItem()"}
  / {{ $ctrl.fieldValue(column) }}
  %cs-field{ "form-mode" => "'tableView'",
             "field" => "column",
             "form-item" => "$ctrl.item",
             "cs-field-options" =>"$ctrl.fieldOptions",
          }
  / "ng-if" => "$ctrl.columnVisible(column, $index) || true"
.tCell.actions
  / EDIT
  .action.edit-action{ "ng-click" => "$ctrl.selectItem()"}<> {{ $ctrl.i18n.t('buttons.edit') }}
  / DELETE
  .action.delete-action{ "ng-click" => "$ctrl.destroyItem($event)" }<> {{ $ctrl.i18n.t('buttons.delete') }}
