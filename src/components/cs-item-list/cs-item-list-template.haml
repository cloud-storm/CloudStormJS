/.item-container{ "ng-class" => "{ 'row-container' : $ctrl.modalMode}" }
.item-container{ "ng-class" => "$ctrl.CL.itemContainer", "ng-if" => "$ctrl.many" }
  .form-control.item{ "ng-repeat" => "item in $ctrl.itemList track by $index",
        "ng-if" => "$ctrl.many && ($index < 2 ||Â !$ctrl.condition.tableMode)",
        "ng-click" => "$ctrl.select(item)",
        "ng-class" => "$ctrl.CL.item"}
    {{ item.$display_name() }}
  .form-control.item{ "ng-if" => "$ctrl.itemList.length > 3 && $ctrl.condition.tableMode",
                  "ng-click" => "$ctrl.showItems()",
                  "ng-class" => "$ctrl.CL.item" }
    {{$ctrl.UI.clickText}}
  .no-item{ "ng-if" => "$ctrl.condition.noItem" }
    {{$ctrl.UI.noItem}}

/ single item
.form-control.item{ "ng-if" => "!$ctrl.many && !$ctrl.condition.noItem",
       "ng-click" => "$ctrl.selectSingle()"}
  {{ $ctrl.itemList.$display_name() }}

.no-item{ "ng-if" => "!$ctrl.many && $ctrl.condition.noItem" }
  {{$ctrl.UI.noItem}}
